/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*第一个公共样式---右侧细线*/
.bdr{
  position: relative;
}
.bdr::after{
    content: "";
    width:1rpx;
    height: 100%;
    position: absolute;
    right: 0;
    top:0;
    background-color: #ccc;
}
/*第二个公共样式 通用的灰色分割条*/
.divider{
  height: 20rpx;  /*高度*/
  background-color: #f1f1f1;  /*灰色背景*/
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1) inset;
}
/*第三个公共样式 向右的箭头*/
/*右箭头*/
.arrow{
 display: flex;
 justify-content: space-between;
 align-items: center;
}
.arrow::after{
    content: "";/*正方形加边框 旋转*/
    width: 15rpx;
    height: 15rpx;
    border-top:3px solid #ccc;
    border-right:3px solid #ccc;
    transform: rotate(45deg); 
}
/*功能四商品评分 用星星表示*/
.start-after{
    color:#e2e2e2;
}
.start-before{
    color:#ff9900;
    position: absolute;
    top:0;
    left:0;
    width:75%;/*商品打分  靠宽度实现*/
    overflow: hidden;
}
/*公共五：截取超出范围名称*/
.ell{
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*超出部分补充...*/
}
/*功能六 --加载更多*/
.loadmore {
  color: #888;
  font-size: 16px;
  line-height: 100px;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40px;
  height: 40px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}
/*列*/
.cell{
    background-color: #fff;
    font-size: 16px;
}
.cell-item{
    border-bottom: 1rpx solid #ddd;
    padding:30rpx 20rpx;
}
